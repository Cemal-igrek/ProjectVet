@model IEnumerable<ProjectVet.Areas.Kullanici.Dtos.RandevuDto>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Admin Panel Login</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/admin.css" asp-append-version="true" />
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Randevularım</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <!-- Vendor CSS Files -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="/vendor/simple-datatables/style.css" rel="stylesheet">
    <link href="/css/adminstyle.css" rel="stylesheet">
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- Include DataTables -->
    <link href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .container-full-height {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .table-responsive {
            flex-grow: 1;
        }
    </style>
</head>
<body>
    <div class="container-fluid container-full-height">
        <h1 class="mt-3">Randevularım</h1>
        <div class="table-responsive">
            <table id="randevuTable" class="table table-bordered table-hover display">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Pet Tür</th>
                        <th>Pet Cins</th>
                        <th>Randevu Tarih</th>
                        <th>Randevu Saat</th>
                        <th>Aşı/Muayene</th>
                        <th>Onay</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var randevu in Model)
                        {
                            <tr>
                                <td>@randevu.KullaniciAd</td>
                                <td>@randevu.KullaniciSoyad</td>
                                <td>@randevu.PetTur</td>
                                <td>@randevu.PetCins</td>
                                <td>@randevu.RandevuTarih.ToShortDateString()</td>
                                <td>@randevu.RandevuSaat.ToString(@"hh\:mm")</td>
                                <td>@(randevu.AsiMiMuayeneMi ? "Aşı" : "Muayene")</td>
                                <td>@(randevu.OnaylandiMi ? "Onaylandı" : "Bekliyor")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">Randevu bulunamadı</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- Include DataTables -->
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

</body>
</html>
