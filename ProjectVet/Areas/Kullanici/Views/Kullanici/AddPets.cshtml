    <!-- Pet Ekleme Formu Start -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                    <h3 class="text-center mb-4">Evcil Hayvan Bilgilerini Ekle</h3>
                    <form id="addPetsForm" action="/Kullanici/Pets/AddPets" method="post">
                        <div class="mb-3">
                            <label for="petType" class="form-label">Hayvan Türü</label>
                            <input type="text" class="form-control" id="petType" name="petType" placeholder="Örneğin: Kedi, Köpek">
                        </div>
                        <div class="mb-3">
                            <label for="petBreed" class="form-label">Cinsi</label>
                            <input type="text" class="form-control" id="petBreed" name="petBreed" placeholder="Örneğin: Golden Retriever">
                        </div>
                        <div class="mb-3">
                            <label for="petAge" class="form-label">Yaşı</label>
                            <input type="number" class="form-control" id="petAge" name="petAge" placeholder="Örneğin: 3">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Pet Ekleme Formu End -->

    <script>
        // Form submit olduğunda
        document.getElementById("addPetsForm").addEventListener("submit", function (event) {
            event.preventDefault(); // Formun otomatik gönderilmesini engelle
            // AJAX kullanarak formu gönder
            var formData = new FormData(this);
            fetch(this.action, {
                method: 'POST',
                body: formData
            })
                .then(response => {
                    if (response.ok) {
                        // Başarılı bir şekilde cevap alındığında
                        alert('Evcil hayvan başarıyla eklendi.');
                        window.location.reload(); // Sayfayı yenile
                    } else {
                        alert('Bir hata oluştu. Lütfen tekrar deneyin.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        });
    </script>

