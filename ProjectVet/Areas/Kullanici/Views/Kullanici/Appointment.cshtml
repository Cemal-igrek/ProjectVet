    <script>
        $(document).ready(function () {
            // İş saatleri örneği: 09:00 - 17:00
            var businessHours = [];
            for (var i = 9; i <= 17; i++) {
                var hour = i < 10 ? '0' + i : i;
                businessHours.push(hour + ':00');
                businessHours.push(hour + ':30');
            }

            // İş saatlerini saat seçeneğine ekle
            function populateTimeOptions(unavailableTimes) {
                var timeSelect = $('#time');
                timeSelect.empty();
                businessHours.forEach(function (time) {
                    var option = $('<option></option>').val(time).text(time);
                    if (unavailableTimes.includes(time)) {
                        option.prop('disabled', true);
                    }
                    timeSelect.append(option);
                });
            }

            $('#date').on('change', function () {
                var selectedDate = $(this).val();
                if (selectedDate) {
                    $.ajax({
                        url: '/api/check-availability',
                        method: 'GET',
                        data: { date: selectedDate },
                        success: function (response) {
                            var unavailableTimes = response.unavailableTimes;
                            populateTimeOptions(unavailableTimes);
                        }
                    });
                } else {
                    populateTimeOptions([]);
                }
            });

            populateTimeOptions([]);
        });
    </script>

